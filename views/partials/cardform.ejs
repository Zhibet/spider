<div class="row">
    <div class="col-10 col-md-5 mx-auto mt-5">
        <form action="/new" method="post">
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="url" id="image" name="img" class="form-control" required placeholder="Enter image URL">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="title" class="form-control" required placeholder="Enter card title">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" required placeholder="Enter card description" rows="3"></textarea>
            </div>
            <div class="mb-3 text-center">
                <button class="btn btn-success" type="submit">Add Card</button>
            </div>
        </form>
    </div>
</div>
